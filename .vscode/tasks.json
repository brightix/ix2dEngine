{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\visual studio code\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}/Engine/Class/*.cpp",
                //SDL3
                "-ID:/visual studio code/x86_64-w64-mingw32/include",
                "-LD:/visual studio code/x86_64-w64-mingw32/lib",

                //SDL3_ttf
                "-ID:/visual studio code/SDL3_ttf-3.1.0/x86_64-w64-mingw32/include",
                "-LD:/visual studio code/SDL3_ttf-3.1.0/x86_64-w64-mingw32/lib",


                "-I${workspaceFolder}/Engine/Types",
                "-I${workspaceFolder}/Engine/Header",
                "-I${workspaceFolder}/Engine/Utilities",
                "-I${workspaceFolder}/Engine/Enum",
                "-I${workspaceFolder}/Engine/Structure",
                "-I${workspaceFolder}/Engine/Window",
                "-lSDL3",
                "-lwinmm",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}